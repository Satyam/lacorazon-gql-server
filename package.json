{
  "name": "lacorazon-gql-server",
  "version": "1.0.0",
  "description": "GraphQL- Express server for La Coraz√≥n app.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:json": "DATA_SOURCE=JSON npm t",
    "test:sqlite": "DATA_SOURCE=SQLite npm t",
    "start": "nodemon --exec babel-node src/index.js",
    "server": "babel-node src/index.js",
    "server:debug": "babel-node --inspect-brk src/index.js",
    "start:json": "DATA_SOURCE=JSON npm start",
    "start:sqlite": "DATA_SOURCE=SQLite npm start",
    "migrate2Json": "babel-node migrate/toJSON.js",
    "migrate2Sqlite": "babel-node migrate/toSQLite.js",
    "clean": "npm run migrate2Json && npm run migrate2Sqlite"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Satyam/lacorazon-gql-server.git"
  },
  "keywords": [],
  "author": "Daniel Barreiro <satyam@satyam.com.ar> (Satyam)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Satyam/lacorazon-gql-server/issues"
  },
  "homepage": "https://github.com/Satyam/lacorazon-gql-server#readme",
  "devDependencies": {
    "@babel/core": "^7.5.0",
    "@babel/node": "^7.5.0",
    "@babel/preset-env": "^7.5.0",
    "axios": "^0.19.0",
    "babel-jest": "^24.8.0",
    "eslint": "^6.0.1",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jest": "^22.7.2",
    "eslint-plugin-prettier": "^3.1.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2"
  },
  "dependencies": {
    "apollo-server": "^2.6.7",
    "apollo-server-express": "^2.6.7",
    "argon2": "^0.24.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "cuid": "^2.1.6",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "fs-extra": "^8.1.0",
    "graphql": "^14.4.2",
    "jsonwebtoken": "^8.5.1",
    "ms": "^2.1.2",
    "sqlite": "^3.0.3"
  },
  "jest": {
    "testMatch": [
      "**/src/tests/*.test.js"
    ],
    "globalSetup": "./src/tests/setup.js",
    "globalTeardown": "./src/tests/teardown.js"
  }
}
